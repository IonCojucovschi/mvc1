@model WebApl1.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <link href="∼/Content/bootstrap.css" rel="stylesheet" />
    <link href="∼/Content/bootstrap-theme.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
    <style>
        body {background-color: #F1F1F1;}
    </style> 
</head>
<body>
    @{ 
        try
        {         /*  transmite mesal la emailul uintrodus */
            WebMail.SmtpServer = "stmp.example.com";
            WebMail.SmtpPort = 587;
            WebMail.EnableSsl = true;
            WebMail.UserName = "Username";
            WebMail.Password = "password";
            WebMail.From = "coju@example.com";
            WebMail.Send("party-host@example.com", "SRVP notifi", Model.Name + " is " + ((Model.WillAttend ?? false) ? "" : "not") + "atending");
        }
        catch (Exception)
        {
            @:<b>Sorry-we couldn't send  the email to the confirm your srvp.</b>
        }

    }





    <div class="text-center">
        <h1>Thank you, @Model.Name!</h1>
        <div class="lead">
            @if (Model.WillAttend == true)
            {
                @: It's great that you're coming. The drinks are already in the fridge!
        }
            else
            {
                @: Sorry to hear that you can't make it, but thanks for letting us know.
        }
        </div>
      </div>
</body> 

</html>
